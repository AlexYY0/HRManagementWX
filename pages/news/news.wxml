<!--pages/news/news.wxml-->
<import src="news-item/news-item-template.wxml" />
<view>
    <swiper catchtap="onSwiperTap" vertical="{{false}}" indicator-dots="true" autoplay="true" interval="5000">
        <swiper-item>
            <image id="7" src="/images/news/news-detail/swiper/wx.png" data-postId="3"></image>
        </swiper-item>
        <swiper-item>
            <image src="/images/news/news-detail/swiper/vr.png" data-postId="4"></image>
        </swiper-item>
        <swiper-item>
            <image src="/images/news/news-detail/swiper/iqiyi.png" data-postId="5"></image>
        </swiper-item>
    </swiper>
    <block wx:for="{{postList}}" wx:for-item="item" wx:for-index="idx">
        <!--//template-->
        <view catchtap="onPostTap" data-postId="{{item.postId}}">
             <template is="NewsItem" data="{{...item}}"/>
        </view>
    </block>
</view>